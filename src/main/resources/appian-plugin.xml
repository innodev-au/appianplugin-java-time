<appian-plugin name="Java Time Functions" key="innodev.appianplugin.functions.time">

	<plugin-info>
		<description>Date and time utility functions, using concepts and behaviour from Java Time (JSR-310).</description>		
		<version>${project.version}</version>
		<application-version min="17.4.0" />
		<vendor name="Innodev" url="https://www.innodev.com.au" />
	</plugin-info>
	
	<function-category key="javaTime" name="Java Time Functions"  />
	
    <function key="time_parseLocalDate" class="innodev.appianplugin.functions.time.Time_parseLocalDate" />
    <function key="time_isValidLocalDate" class="innodev.appianplugin.functions.time.Time_isValidLocalDate" />
    
</appian-plugin>